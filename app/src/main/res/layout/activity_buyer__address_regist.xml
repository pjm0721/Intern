<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="Buyer.Buyer_AddressRegistActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Buyer_gps_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/Buyer_gps_img"
            android:layout_width="47dp"
            android:layout_height="35dp"
            android:src="@drawable/buyer_gps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.191"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.533">

        </ImageView>

        <TextView
            android:id="@+id/Buyer_gps_address"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="   현위치 주소를 불러옵니다"
            android:fontFamily="@font/maplestorylight"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/maplestorylight"
        android:text="직접 입력"
        android:textColor="#000"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Buyer_AddressRegistActivity_DaeguBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/maplestorylight"
            android:clickable="false"
            android:layout_weight="1"
            android:background="@drawable/buyer_button_shape"
            android:text="대구광역시" />
<!--        <Button-->
<!--            android:id="@+id/Buyer_AddressRegistActivity_BusanBtn"-->
<!--            android:layout_width="0dp"-->
<!--            android:fontFamily="@font/seoulnamsan_cb"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="2dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/buyer_button_shape"-->
<!--            android:text="부산광역시" />-->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Buyer_AddressRegistActivity_Container"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/Buyer_AddressRegistActivity_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_thin"
                android:hint="상세 주소를 입력하세요."
                android:fontFamily="@font/maplestorylight"
                android:inputType="text"
                android:padding="10dp" />

            <Button
                android:id="@+id/Buyer_AddressRegistActivity_Btn"
                android:layout_width="348dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/maplestorylight"
                android:background="@drawable/login_focus_btn_selector"
                android:text="완 료"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>