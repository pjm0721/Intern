<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="Buyer.Buyer_AddressRegistActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Buyer_gps_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/Buyer_gps_img"
            android:layout_width="47dp"
            android:layout_height="35dp"
            android:src="@drawable/buyer_gps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.191"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.533">

        </ImageView>

        <TextView
            android:id="@+id/Buyer_gps_address"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="   현위치 주소를 불러옵니다"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content" />

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
    <EditText
        android:layout_marginVertical="20dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:hint="상세 주소를 입력하세요."
        android:background="@drawable/border_thin"
        android:id="@+id/Buyer_AddressRegistActivity_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        />

    <Button
        android:textSize="20dp"
        android:background="@drawable/login_focus_btn_selector"
        android:text="완 료"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_width="348dp"
        android:layout_height="37dp"
        android:id="@+id/Buyer_AddressRegistActivity_Btn"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>