<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="20dp"
        android:text="회 원 정 보   수 정"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_below">
        <TextView
            android:textSize="15dp"
            android:text="       ID"
            android:layout_weight="6"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="left|center"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/Buyer_ModifyInfoActivity_idText"
            android:textSize="15dp"
            android:text="ID"
            android:layout_weight="8"
            android:gravity="left|center"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_below">
        <CheckBox
            android:id="@+id/Buyer_ModifyInfoActivity_checkBox"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="15dp"
            android:text=" 비밀번호 변경"
            android:layout_weight="5"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="left|center"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <EditText
            android:id="@+id/Buyer_ModifyInfoActivity_pwEdit"
            android:textSize="15dp"
            android:hint="7자 이상 텍스트"
            android:layout_weight="8"
            android:background="@drawable/textview_selector"
            android:gravity="left|center"
            android:enabled="false"
            android:focusable="false"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_below">
        <TextView
            android:textSize="15dp"
            android:text="        이름"
            android:layout_weight="6"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="left|center"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

        <EditText
            android:id="@+id/Buyer_ModifyInfoActivity_nameEdit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:background="@drawable/textview_selector"
            android:gravity="left|center"
            android:hint="2자 이상 텍스트."
            android:padding="10dp"
            android:lines="@null"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_below">
        <TextView
            android:textSize="15dp"
            android:text="        닉네임"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_weight="6"
            android:gravity="left|center"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

        <EditText
            android:id="@+id/Buyer_ModifyInfoActivity_nicknameEdit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:gravity="left|center"
            android:padding="10dp"
            android:background="@drawable/textview_selector"
            android:hint="2자 이상 텍스트."
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_below">
        <TextView
            android:textSize="15dp"
            android:text="        전화번호"
            android:layout_weight="6"
            android:gravity="left|center"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <EditText
            android:id="@+id/Buyer_ModifyInfoActivity_callEdit"
            android:textSize="15dp"
            android:hint="'-' 기호는 생락하세요"
            android:layout_weight="8"
            android:background="@drawable/textview_selector"
            android:gravity="left|center"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout></LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/Buyer_ModifyInfoActivity_Btn"
        android:background="@drawable/login_focus_btn_selector"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="완  료"
        android:layout_width="328dp"
        android:layout_height="37dp"/>
</LinearLayout>