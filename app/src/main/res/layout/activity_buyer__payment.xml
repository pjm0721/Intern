<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="Buyer.Buyer_PaymentActivity">

    <TextView
        android:text="결 제 하 기"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="주문자 정보"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="ID"
            android:textSize="17dp"
            android:gravity="left"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Buyer_PaymentActivity_idText"
            android:text="IDIDIDIDIDID"
            android:gravity="left"
            android:textSize="17dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="이름"
            android:gravity="left"
            android:textSize="17dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Buyer_PaymentActivity_nameText"
            android:text="홍길동"
            android:gravity="left"
            android:textSize="17dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="전화번호"
            android:gravity="left"
            android:textSize="17dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Buyer_PaymentActivity_callText"
            android:text="010-1234-1324"
            android:textSize="17dp"
            android:gravity="left"
            android:layout_width="290dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <TextView
            android:text="주소"
            android:gravity="left"
            android:textSize="17dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/Buyer_PaymentActivity_addressText"
            android:text="대구광역시 수성구 무슨동 10-3 무슨무슨무슨아파트 101동 101호"
            android:gravity="left"
            android:textSize="17dp"
            android:layout_width="290dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:text="구매정보"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_marginVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginVertical="5dp"
        android:id="@+id/Buyer_PaymentActivity_RecyclerView"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="※ 배달료 1,000원입니다. ※"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Buyer_PaymentActivity_totText"
        android:gravity="right"
        android:text="총 결제금액 : 100000원"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <TextView
            android:text="결제방법"
            android:textSize="15dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Spinner
            android:layout_marginHorizontal="20dp"
            android:id="@+id/Buyer_PaymentActivity_Spinner"
            android:layout_width="250dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
        android:layout_margin="15dp"
        android:id="@+id/Buyer_PaymentActivity_Btn"
        android:textSize="25dp"
        android:text="결  제  하  기"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:background="@drawable/login_focus_btn_selector"
        android:layout_height="40dp"/>
</LinearLayout>