<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Buyer_ReviewActivity_StoreNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="업소명입니다."
                android:textSize="30dp" />

            <TextView
                android:id="@+id/Buyer_ReviewActivity_timeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="영업시간과 휴무일"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Buyer_ReviewActivity_callText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="☎ : 010-1234-1234"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/Buyer_ReviewActivity_PresentativeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="대표자명 : 김철수"
                    android:textSize="17dp" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/Buyer_ReviewActivity_ImageView"
            android:layout_margin="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/Buyer_ReviewActivity_numText"
        android:text="최근 리뷰   0 개"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/Buyer_ReviewActivity_scoreText"
        android:text="평점 평균 : 0.0 / 5.0"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Buyer_ReviewActivity_RecyclerView1"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginVertical="10dp"/>
</LinearLayout>