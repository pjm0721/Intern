<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="158dp"
        android:layout_height="89dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/login_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_id"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_rgp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_id" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="328dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_focus_btn_selector"
        android:onClick="on_login"
        android:text="로그인"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password" />

    <RadioGroup
        android:id="@+id/login_rgp"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_img">

        <RadioButton
            android:id="@+id/login_rBtn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일반 이용자"
            android:checked="true"
            android:textColor="#1C65EC"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/login_rBtn02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="판매자"
            android:textColor="#1C65EC"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/login_rBtn03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="배달원"
            android:textColor="#1C65EC"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/login_txtviw2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="130dp"
        app:layout_constraintTop_toBottomOf="@+id/login_btn">

        <Button
            android:paddingRight="8dp"
            android:id="@+id/login_find_password"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="7"
            android:background="@null"
            android:gravity="right"
            android:text="비밀번호 찾기"
            android:textColor="#888888"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/login_txtviw"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="|"
            android:textColor="#888888" />

        <Button
            android:id="@+id/login_find_id"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="3"
            android:background="@null"
            android:text="아이디 찾기"
            android:textColor="#888888"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/login_txtviw22"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="|"
            android:textColor="#888888" />

        <CheckBox
            android:id="@+id/login_autoCheckBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="자동 로그인"
            android:textColor="#888888"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_txtviw2"
        android:layout_width="85dp"
        android:layout_height="19dp"
        android:text="처음이시라면"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/login_signup_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828" />

    <Button
        android:id="@+id/login_signup_btn"
        android:layout_width="64dp"
        android:layout_height="19dp"
        android:layout_marginEnd="140dp"
        android:background="@null"
        android:onClick="on_login_signup"
        android:text="회원가입"
        android:textColor="#1C65EC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828" />


</androidx.constraintlayout.widget.ConstraintLayout>