<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="물건 추가하기"
        android:textColor="#000"
        android:textSize="20dp"
        android:fontFamily="@font/seoulnamsan_cb"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="상품 이름 : "
            android:fontFamily="@font/seoulnamsan_cb"
            android:textColor="#000" />

        <EditText
            android:id="@+id/seller_add_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/seoulnamsan_cb"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="개 수 : "
            android:fontFamily="@font/seoulnamsan_cb"
            android:textColor="#000" />

        <EditText
            android:id="@+id/seller_add_num"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:fontFamily="@font/seoulnamsan_cb"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seoulnamsan_cb"
            android:text="개"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="가 격 : "
            android:fontFamily="@font/seoulnamsan_cb"
            android:textColor="#000" />

        <EditText
            android:id="@+id/seller_add_price"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:fontFamily="@font/seoulnamsan_cb"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="원"
            android:fontFamily="@font/seoulnamsan_cb"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="이미지 : "
            android:fontFamily="@font/seoulnamsan_cb"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/seller_add_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/seller_init_img" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seller_add_ok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/login_focus_btn_selector"
            android:text=" 등록 "
            android:fontFamily="@font/seoulnamsan_cb"
            android:textColor="#fff" />

        <Button
            android:id="@+id/seller_add_cancle"
            android:layout_width="0dp"
            android:background="@drawable/btn_cancel"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/seoulnamsan_cb"
            android:text=" 취소 " />
    </LinearLayout>
</LinearLayout>