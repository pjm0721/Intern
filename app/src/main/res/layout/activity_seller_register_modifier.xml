<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="업소명"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/textview_selector"
            android:layout_weight="4"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/seller_business_name"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="대표자"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15dp"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:background="@drawable/textview_selector"
            android:id="@+id/seller_business_master"
            />
    </LinearLayout>



    </LinearLayout>

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/seller_business_image"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="2"
        android:src="@drawable/seller_init_img"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

    <LinearLayout
        android:layout_weight="9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="도시"
            android:textStyle="bold"
            android:textSize="15dp"

            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/seller_business_city"/>
    </LinearLayout>

        <LinearLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="구군"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"

                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/seller_business_area"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="상세주소"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15dp"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textview_selector"
            android:layout_weight="4"
            android:padding="10dp"
            android:textSize="15dp"
            android:id="@+id/seller_business_address"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="영업시간"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15dp"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/textview_selector"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:id="@+id/seller_business_time"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15dp"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/textview_selector"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:id="@+id/seller_business_contact_number"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15dp"

            />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:id="@+id/seller_business_category"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="소    개"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15dp"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:background="@drawable/textview_selector"
            android:id="@+id/seller_business_explain"
            />
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="메뉴 관리 "
            android:textColor="#000"
            android:gravity="left"
            android:textSize="20dp" />

        <Button
            android:id="@+id/seller_add_thing"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/plus" />
        <Button
            android:id="@+id/seller_del_thing"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/delete"
            android:layout_marginLeft="20dp" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seller_sell_list"
        android:layout_width="match_parent"
        android:layout_height="300dp" />



    <Button
        android:id="@+id/seller_complete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="완료"/>

</LinearLayout>