<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kyngpook.Seller.SellerReviewManage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 가게 총 리뷰 수 : "
            android:fontFamily="@font/seoulnamsan_cb"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/seller_review_manage_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seoulnamsan_cb"
            android:text="###"
            android:layout_weight="5"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <ListView
            android:id="@+id/seller_review_manage_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>

    </androidx.cardview.widget.CardView>
</LinearLayout>