<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/deliverSignUp_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="배달자 회원가입"
        android:textColor="#f000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/deliverSignUp_cardView"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverSignUp_textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <EditText
                android:id="@+id/deliverSignUp_realname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="성명"
                android:textSize="15sp"
                android:inputType="textPersonName" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/deliverSignUp_cardView1"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:cardElevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverSignUp_cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">
                <EditText
                android:id="@+id/deliverSignUp_id"
                android:layout_width="275dp"
                android:layout_height="45dp"
                android:background="@null"
                android:textSize="15sp"
                android:hint="아이디 (3~10자리)"
                android:inputType="textPersonName" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/deliverSignUp_check_button"
        android:layout_width="74dp"
        android:layout_height="31dp"
        android:layout_gravity="right|center"
        android:background="@drawable/button_back"
        android:text="중복확인"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/deliverSignUp_cardView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deliverSignUp_cardView1"
        app:layout_constraintTop_toTopOf="@+id/deliverSignUp_cardView1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/deliverSignUp_cardView2"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:cardElevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverSignUp_cardView1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">
            <EditText
                android:id="@+id/deliverSignUp_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:textSize="15sp"
                android:hint="비밀번호 (8~12자리, 특수문자 가능)"
                android:inputType="textPassword" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/deliverSignUp_cardView3"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverSignUp_cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">
            <EditText
                android:id="@+id/deliverSignUp_passwordC"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:textSize="15sp"
                android:hint="비밀번호 확인"
                android:inputType="textPassword" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/deliverSignUp_cardView4"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:background="@null"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:cardElevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverSignUp_cardView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">
            <EditText
                android:id="@+id/deliverSignUp_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:textSize="15sp"
                android:hint="전화번호 ( '-' 제외 )"
                android:inputType="number" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Spinner
        android:id="@+id/deliverSignUp_spinner"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverSignUp_cardView4" />
    <androidx.cardview.widget.CardView
        android:id="@+id/deliverSignUp_cardView5"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverSignUp_spinner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <EditText
                android:id="@+id/deliverSignUp_answer"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="답변"
                android:inputType="textPersonName"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/deliverSignUp_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_back"
        android:text="회원가입 완료"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverSignUp_cardView5" />
</androidx.constraintlayout.widget.ConstraintLayout>