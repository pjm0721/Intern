<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Buyer_AddressFragmentDaegu_mBtn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/buyer_button_shape"

            android:fontFamily="@font/maplestorylight"
            android:text="남구" />

        <Button
            android:id="@+id/Buyer_AddressFragmentDaegu_mBtn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/maplestorylight"
            android:background="@drawable/buyer_button_shape"
            android:text="달서구" />

        <Button
            android:id="@+id/Buyer_AddressFragmentDaegu_mBtn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/maplestorylight"
            android:background="@drawable/buyer_button_shape"
            android:text="동구" />

        <Button
            android:id="@+id/Buyer_AddressFragmentDaegu_mBtn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maplestorylight"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/buyer_button_shape"
            android:text="북구" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Buyer_AddressFragmentDaegu_mBtn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/maplestorylight"
            android:layout_weight="1"
            android:background="@drawable/buyer_button_shape"
            android:text="서구" />

        <Button
            android:id="@+id/Buyer_AddressFragmentDaegu_mBtn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maplestorylight"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/buyer_button_shape"
            android:text="수성구" />

        <Button
            android:id="@+id/Buyer_AddressFragmentDaegu_mBtn7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/maplestorylight"
            android:layout_weight="1"
            android:background="@drawable/buyer_button_shape"
            android:text="중구" />
    </LinearLayout>

</LinearLayout>