<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="3dp"
    android:background="@drawable/border_below"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/Buyer_Payment_item_nameText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="드라이버드라이버드라"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Buyer_Payment_item_numText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="25dp"
        android:text="수량 : 5"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/Buyer_Payment_item_priceText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="5,000 원"
        android:textColor="#000"
        android:textSize="17dp" />





</LinearLayout>