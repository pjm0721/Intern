<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/Buyer_Payment_item_nameText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="left"
        android:fontFamily="@font/maplestorylight"
        android:textSize="15sp"
        android:text="드라이버드라이버드라" />

    <TextView
        android:id="@+id/Buyer_Payment_item_numText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingRight="25dp"
        android:text="수량 : 5"
        android:fontFamily="@font/maplestorylight"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/Buyer_Payment_item_priceText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:fontFamily="@font/maplestorylight"
        android:textSize="15sp"
        android:text="5,000 원" />





</LinearLayout>