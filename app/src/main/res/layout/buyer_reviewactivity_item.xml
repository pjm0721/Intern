<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_below"
        android:padding="10dp">

        <TextView
            android:id="@+id/Buyer_Review_item_nicknameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="#000"
            android:fontFamily="@font/maplestorylight"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Buyer_Review_item_timeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="2020년 05월 10일"
            android:fontFamily="@font/maplestorylight"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Buyer_Review_item_scoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="평점 : 0.0 / 5.0"
            android:fontFamily="@font/maplestorylight"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Buyer_Review_item_contentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="내용내용내용내용"
            android:fontFamily="@font/maplestorylight"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>