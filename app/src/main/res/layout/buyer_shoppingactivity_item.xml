<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="3dp"
    android:background="@drawable/border_below"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/Buyer_Shopping_item_addBtn1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Buyer_Shopping_item_nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:text="드라이버드라이버드라"
            android:textColor="#000"
            android:textSize="17dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Buyer_Shopping_item_priceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="5,000 원"
            android:textColor="#000"
            android:textSize="17dp" />

    </LinearLayout>

    <Button
        android:id="@+id/Buyer_Shopping_item_numText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="25dp"
        android:gravity="center"
        android:text="수량 : 5"
        android:background="@android:color/transparent"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/Buyer_Shopping_item_imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:gravity="center"></ImageView>


</LinearLayout>