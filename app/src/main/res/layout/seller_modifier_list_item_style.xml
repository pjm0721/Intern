<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/seller_modifiy_list_layout"
    android:padding="10dp"
    android:background="@drawable/border_below"
    >

    <ImageView
        android:id="@+id/seller_modify_list_image"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/seller_modify_list_name"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="물건 이름 : 방망이"

        />

    <TextView
        android:id="@+id/seller_modify_list_num"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="수량 : 5"/>

    <TextView
        android:id="@+id/seller_modify_list_price"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="가격 : 10000"/>
    <CheckBox
        android:id="@+id/seller_modifiy_list_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>